<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_video_root"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:background="@color/white"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="195dp">

        <ImageView
            android:id="@+id/sp_img"
            android:layout_width="match_parent"
            android:layout_height="195dp"
            android:scaleType="fitXY"
            android:src="@drawable/empty_photo_jiu_big"
            />

        <TextView
            android:id="@+id/sp_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:background="#60000000"
            android:padding="5dp"
            android:text="我觉得是"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/sp_play"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:background="@mipmap/sp_play"
            android:visibility="visible" />

    </FrameLayout>

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">



        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/sp_time_img"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@mipmap/sp_times"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/sp_timelong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="0.8dp"
                android:gravity="center_vertical"
                android:textColor="@color/video_text_color"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="10dp"
                android:background="@mipmap/sp_play_smal"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/sp_times"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0.8dp"
                android:gravity="center_vertical"
                android:textColor="@color/video_text_color"
                android:textSize="12sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/news_tab"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ></LinearLayout>
    </LinearLayout>

</LinearLayout>